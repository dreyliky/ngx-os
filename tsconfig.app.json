{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./out-tsc/app",
        "types": [],
        "paths": {
            "@Core/*": ["src/app/showcase/core/*"],
            "@Features/*": ["src/app/showcase/features/*"],
            "@Features": ["src/app/showcase/features"],
            "@Layouts/*": ["src/app/showcase/layouts/*"],
            "@Layouts": ["src/app/showcase/layouts"],
            "@Pages/*": ["src/app/showcase/pages/*"],
            "@Pages": ["src/app/showcase/pages"],
            "@Doc/*": ["src/app/showcase/*"],
            "ngx-os": ["src/app/library"],
            "ngx-os/*": ["src/app/library/*"]
        }
    },
    "files": [
        "src/main.ts",
        "src/polyfills.ts"
    ]
}
