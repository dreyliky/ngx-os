{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../out-tsc/lib",
        "target": "es2015",
        "declaration": true,
        "inlineSources": true,
        "types": [],
        "lib": [
            "dom",
            "es2018"
        ],
        "paths": {
            "@Lib/*": ["src/lib/*"],
            "@Core/*": ["src/lib/core/*"],
            "@Modules/*": ["src/lib/modules/*"],
            "@Helpers/*": ["src/lib/helpers/*"]
        }
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "enableResourceInlining": true
    },
    "exclude": [
        "src/test.ts",
        "**/*.spec.ts"
    ]
}
