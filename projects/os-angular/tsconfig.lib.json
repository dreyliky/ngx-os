{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "../../out-tsc/lib",
        "target": "es2015",
        "declaration": true,
        "inlineSources": true,
        "types": [],
        "lib": [
            "dom",
            "es2018"
        ],
        "paths": {
            "@core": ["projects/os-angular/src/lib/core"],
            "@core/*": ["projects/os-angular/src/lib/core/*"],
            "@helpers": ["projects/os-angular/src/lib/helpers"],
            "@helpers/*": ["projects/os-angular/src/lib/helpers/*"],
            "@modules": ["projects/os-angular/src/lib/modules"],
            "@modules/*": ["projects/os-angular/src/lib/modules/*"],
            "@lib": ["projects/os-angular/src/lib"]
        }
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "enableResourceInlining": true
    },
    "exclude": [
        "src/test.ts",
        "**/*.spec.ts"
    ]
}
