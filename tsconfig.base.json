{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "es2020",
        "moduleResolution": "node",
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2015",
        "lib": [
            "es2018",
            "dom"
        ],
        "typeRoots": ["node_modules/@types", "node_modules/@angular"],
        "paths": {
            "@lib-core": ["projects/os-angular/src/lib/core"],
            "@lib-core/*": ["projects/os-angular/src/lib/core/*"],
            "@lib-helpers": ["projects/os-angular/src/lib/helpers"],
            "@lib-helpers/*": ["projects/os-angular/src/lib/helpers/*"],
            "@lib-modules": ["projects/os-angular/src/lib/modules"],
            "@lib-modules/*": ["projects/os-angular/src/lib/modules/*"],
            "@lib-shared": ["projects/os-angular/src/lib/shared.module.ts"]
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}